<h1>New entry_type_attribute_type</h1>

<%= error_messages_for :entry_type_attribute_type %>

<% form_for(@entry_type_attribute_type) do |f| %>
  <p>
    <b>Entry type</b><br />
    <%= f.select :entry_type_id, EntryType.find(:all, :conditions => { :complex => true }).collect {|t| [ t.name, t.id ] }, { :prompt => true } %>
  </p>

  <p>
    <b>Attribute type</b><br />
    <%= f.select :attribute_type_id, AttributeType.find(:all).collect {|t| [ t.name, t.id ] }, { :prompt => true } %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', entry_type_attribute_types_path %>
